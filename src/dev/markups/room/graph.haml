.bems-room-section-point-graph-wrapper{"ng-show" => "showGraph"}
  %button.btn.btn-raised.btn-danger.pull-right{"ng-click" => "showingGraph()",:style => "margin-right: 35px;"} Close
  #bems-room-section-point-graph.bems-room-section-point-graph
.bems-room-section-point-list{"ng-show" => "showGraph"}
  .bems-room-section-point-item.row{"ng-repeat" => "pointGraph in deviceGraph track by $index"}
    .col-md-2.col-xs-12
      %img.bems-room-section-point-icon{"ng-src" => "{{pointGraph.icon}}"}
      %span.bems-room-section-point-name {{pointGraph.name}}
    .col-md-8.col-sm-9.col-xs-12
      .row
        .checkbox.col-md-4.col-sm-6.col-xs-12{"ng-repeat" => "pointt in pointGraph.pointid", "ng-hide" => "hideCtrl(pointt.type)"}
          %label
            %input{:type => "checkbox", "ng-model" => "pointt.show", "ng-change" => "choosePoint($parent.$index)"} &nbsp; {{pointNameShort(pointt.name)}}
    .col-md-2.col-sm-3.col-xs-12{"ng-show" => "checkCtrl(pointGraph.pointid)"}
      %a.btn.btn-raised.btn-sm.btn-info.pull-right{"ng-href" => "#/control/{{pointGraph.id}}"} Control
